<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Rich buttons' base style -->
    <style name="RbButton" parent="android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/rb__height_element</item>
        <item name="android:textColor">@drawable/rb__button_text_color</item>
        <item name="android:background">@drawable/rb__button</item>
        <item name="android:shadowColor">@color/rb__button_shadow_color</item>
        <item name="android:shadowDx">@integer/rb__button_shadow_dx</item>
        <item name="android:shadowDy">@integer/rb__button_shadow_dy</item>
        <item name="android:shadowRadius">@integer/rb__button_shadow_radius</item>
    </style>

    <!-- Rich button with blue from ICS palette -->
    <style name="RbButton.Blue"></style>

    <!-- Rich button with green from ICS palette -->
    <style name="RbButton.Green">
        <item name="android:background">@drawable/rb__button_green</item>
    </style>

    <!-- Rich button with red from ICS palette -->
    <style name="RbButton.Red">
        <item name="android:background">@drawable/rb__button_red</item>
    </style>

    <!-- Rich button with purple from ICS palette -->
    <style name="RbButton.Purple">
        <item name="android:background">@drawable/rb__button_purple</item>
    </style>

    <!-- Rich button with yellow from ICS palette -->
    <style name="RbButton.Yellow">
        <item name="android:background">@drawable/rb__button_yellow</item>
    </style>

    <!-- Rich button which has glossy style -->
    <style name="RbButton.Glossy">
        <item name="android:background">@drawable/rb__button_glossy</item>
    </style>

    <!-- Rich button which becomes inversed gradient -->
    <style name="RbButton.Inverse">
        <item name="android:background">@drawable/rb__button_inverse</item>
        <item name="android:textColor">@color/rb__button_inverse</item>
    </style>

    <!-- Rich button which becomes inversed gradient with red color -->
    <style name="RbButton.Inverse.Red">
        <item name="android:background">@drawable/rb__button_inverse_red</item>
        <item name="android:textColor">@color/rb__button_inverse_red</item>
    </style>

    <!-- Rich button which becomes inversed gradient with blue color -->
    <style name="RbButton.Inverse.Blue">
        <item name="android:background">@drawable/rb__button_inverse_blue</item>
        <item name="android:textColor">@color/rb__button_inverse_red</item>
    </style>

    <!-- Rich button which becomes inversed gradient with green color -->
    <style name="RbButton.Inverse.Green">
        <item name="android:background">@drawable/rb__button_inverse_green</item>
        <item name="android:textColor">@color/rb__button_inverse_red</item>
    </style>

    <!-- Rich button which becomes inversed gradient with orange color -->
    <style name="RbButton.Inverse.Orange">
        <item name="android:background">@drawable/rb__button_inverse_orange</item>
        <item name="android:textColor">@color/rb__button_inverse_red</item>
    </style>

    <!-- Rich button which becomes inversed gradient with black color -->
    <style name="RbButton.Inverse.Black">
        <item name="android:background">@drawable/rb__button_inverse_black</item>
        <item name="android:textColor">@color/rb__button_inverse_red</item>
    </style>

    <!-- Rich button which becomes inversed gradient and much rounded corner -->
    <style name="RbButton.Inverse.Rounded"></style>

    <!-- Rich button which becomes inversed gradient and much rounded corner with red color -->
    <style name="RbButton.Inverse.Rounded.Red">
        <item name="android:background">@drawable/rb__button_inverse_rounded_red</item>
        <item name="android:textColor">@color/rb__button_inverse_red</item>
    </style>

    <!-- Rich button which becomes inversed gradient and much rounded corner with blue color -->
    <style name="RbButton.Inverse.Rounded.Blue">
        <item name="android:background">@drawable/rb__button_inverse_rounded_blue</item>
        <item name="android:textColor">@color/rb__button_inverse_red</item>
    </style>

    <!-- Rich button which becomes inversed gradient and much rounded corner with green color -->
    <style name="RbButton.Inverse.Rounded.Green">
        <item name="android:background">@drawable/rb__button_inverse_rounded_green</item>
        <item name="android:textColor">@color/rb__button_inverse_red</item>
    </style>

    <!-- Rich button which becomes inversed gradient and much rounded corner with orange color -->
    <style name="RbButton.Inverse.Rounded.Orange">
        <item name="android:background">@drawable/rb__button_inverse_rounded_orange</item>
        <item name="android:textColor">@color/rb__button_inverse_red</item>
    </style>

    <!-- Rich button which becomes inversed gradient and much rounded corner with black color -->
    <style name="RbButton.Inverse.Rounded.Black">
        <item name="android:background">@drawable/rb__button_inverse_rounded_black</item>
        <item name="android:textColor">@color/rb__button_inverse_red</item>
    </style>

    <!-- Rich button which becomes darken when tapped -->
    <style name="RbButton.Darken">
        <item name="android:background">@drawable/rb__button_darken</item>
    </style>

    <!-- Rich button which is recessed when tapped -->
    <style name="RbButton.Recessed">
        <item name="android:background">@drawable/rb__button_recessed</item>
        <item name="android:textColor">@color/rb__button_recessed</item>
    </style>

    <!-- Rich button which looks like plastic button -->
    <style name="RbButton.Plastic">
        <item name="android:background">@drawable/rb__button_plastic</item>
        <item name="android:textColor">@color/rb__button_plastic</item>
    </style>

    <!-- Rich light colored button highlighted with ICS style -->
    <style name="RbButton.ICS">
        <item name="android:background">@drawable/rb__button_ics</item>
        <item name="android:textColor">@color/rb__button_ics_light</item>
    </style>

    <!-- Rich black colored button highlighted with ICS style -->
    <style name="RbButton.ICS.Black">
        <item name="android:background">@drawable/rb__button_ics_black</item>
        <item name="android:textColor">@color/rb__button_ics_black</item>
    </style>

    <!-- Rich button which looks like plastic button -->
    <style name="RbButton.Plastic.Rounded">
        <item name="android:background">@drawable/rb__button_plastic_rounded</item>
        <item name="android:textColor">@color/rb__button_plastic</item>
    </style>

</resources>